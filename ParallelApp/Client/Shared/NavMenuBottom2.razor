@inject NavigationManager NavManager

<MudAppBar Bottom="true" Fixed="true" Color="Color.Info" Elevation="1" Style="height:75px">
    
    <MudGrid Spacing=0>
        <MudItem xs=4 sm=4>
            <MudButton @onclick='()=>Navigate("/feed/1")' Variant="Variant.Filled" DisableElevation="true" Color="Color.Info" Style="width:100%;height:80%">
                <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Large"/>
            </MudButton>
        </MudItem>
        <MudItem xs=4 sm=4>
            <MudButton @onclick='()=>Navigate("/appadmin")' Variant="Variant.Filled" DisableElevation="true"  Color="Color.Info" Style="width:100%;height:80%">
                <MudIcon Icon="@Icons.Material.Filled.Dashboard" Size="Size.Large"/>
            </MudButton>
        </MudItem>
        <MudItem xs=4 sm=4>
            <MudButton @onclick='()=>Navigate("/user/id/1")' Variant="Variant.Filled" DisableElevation="true"  Color="Color.Info" Style="width:100%;height:80%">
                <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large"/>
            </MudButton>
        </MudItem>
    </MudGrid>
    <br/>
    
</MudAppBar>



@code {
    private void Navigate(string href)
    {
        NavManager.NavigateTo(href);
    }
}
