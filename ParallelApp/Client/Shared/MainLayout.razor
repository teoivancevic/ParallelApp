@inherits LayoutComponentBase
@inject NavigationManager NavManager
@using MudBlazor.Services

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />



<MudLayout>
       

    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText >Parallel App</MudText> 
        <MudSpacer />
        <MudMenu Direction="Direction.Bottom" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <ActivatorContent>
                <!--<MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" Edge="Edge.End"></MudIconButton>-->
                <MudAvatar Image="https://cdn.cloudflare.steamstatic.com/steamcommunity/public/images/avatars/a9/a911a3b6d4345cb8216194defcce01d1267bba31_full.jpg"/>
            </ActivatorContent>
            <ChildContent>
                <PersonCard Class="mt-n2"/>
                <MudDivider/>
                <MudListItem Text="Profile" Href="/user/id/2" Icon="@Icons.Material.Filled.Person"/>
                <MudListItem Text="Log out" Href="/logout" Icon="@Icons.Material.Filled.Logout"/>
            </ChildContent>
        </MudMenu>
        
    </MudAppBar>

    <MudBreakpointProvider>
        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="false">
            <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always">
                <!--<MudDrawerHeader>
                    <MudText Typo="Typo.h6">Header</MudText>
                </MudDrawerHeader>-->
                <!--
                <PersonCard />
        
                <MudDivider />
                -->

                <NavMenu/>
                
                <MudSpacer />
                <MudDivider/>

                <MudText>© 2022 Parallel j.d.o.o.</MudText>
            </MudDrawer>
        </MudHidden>
    </MudBreakpointProvider>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mb-16">
            <br />
            @Body
            <br />
            <br />
            <br />
        </MudContainer>
    </MudMainContent>
</MudLayout>


<MudBreakpointProvider>
    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
        <MudScrollToTop>
            <MudFab Color="Color.Primary" Icon="@Icons.Filled.KeyboardArrowUp" Class="mb-11"/>
        </MudScrollToTop>
        <NavMenuBottom2 />
    </MudHidden>
    
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudScrollToTop>
            <MudFab Color="Color.Primary" Icon="@Icons.Filled.KeyboardArrowUp"/>
        </MudScrollToTop>
    </MudHidden>
</MudBreakpointProvider>



@code {
    bool _drawerOpen = true;


    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private ThemeManagerTheme _themeManager = new ThemeManagerTheme();
    public bool _themeManagerOpen = false;

    void OpenThemeManager(bool value)
    {
        _themeManagerOpen = value;
    }

    void UpdateTheme(ThemeManagerTheme value)
    {
        _themeManager = value;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        StateHasChanged();
    }


}