@inherits LayoutComponentBase
@inject NavigationManager NavManager
@using MudBlazor.Services

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudThemeManagerButton OnClick="@((e) => OpenThemeManager(true))" />
    <MudThemeManager Open="_themeManagerOpen" OpenChanged="OpenThemeManager" Theme="_themeManager" ThemeChanged="UpdateTheme" />
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
        <MudSpacer />
        <MudMenu Direction="Direction.Bottom">
            <ActivatorContent>
                <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" Edge="Edge.End"></MudIconButton>
            </ActivatorContent>
            <ChildContent>
                <PersonCard Class="mt-n2"/>
                <MudDivider/>
                <MudListItem Text="Account" Href="/user/id/1"/>
                <MudListItem Text="Log out" Href="/logout"/>
            </ChildContent>
        </MudMenu>
        
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always">
        <!--<MudDrawerHeader>
            <MudText Typo="Typo.h6">Header</MudText>
        </MudDrawerHeader>-->
        <PersonCard />
        
        <MudDivider />

        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mb-16">
            <br />
            @Body
            <br />
            <br />
            <br />
        </MudContainer>
    </MudMainContent>
</MudLayout>


<MudBreakpointProvider>
    <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
        <MudScrollToTop>
            <MudFab Color="Color.Primary" Icon="@Icons.Filled.KeyboardArrowUp" Class="mb-11"/>
        </MudScrollToTop>
        <NavMenuBottom />
    </MudHidden>
    
    <MudHidden Breakpoint="Breakpoint.Xs">
        <MudScrollToTop>
            <MudFab Color="Color.Primary" Icon="@Icons.Filled.KeyboardArrowUp"/>
        </MudScrollToTop>
    </MudHidden>
</MudBreakpointProvider>



@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private ThemeManagerTheme _themeManager = new ThemeManagerTheme();
    public bool _themeManagerOpen = false;

    void OpenThemeManager(bool value)
    {
        _themeManagerOpen = value;
    }

    void UpdateTheme(ThemeManagerTheme value)
    {
        _themeManager = value;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        StateHasChanged();
    }


}